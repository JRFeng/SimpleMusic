<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listHeaderHeight"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <CheckBox
            android:id="@+id/cbCheckedAll"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/bg_check_box"
            android:button="@null"/>

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="0dp"/>

        <TextView
            style="@style/TextStyle.ListHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvCheckedItemCount"
            style="@style/TextStyle.ListHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已选0首"/>

        <android.support.v4.widget.Space
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnCommitAdd"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_button_blue_stroke"
            android:text="确定"
            android:textColor="@color/colorBlue"
            android:textSize="13sp"/>

    </LinearLayout>

    <jrfeng.simplemusic.widget.Divider
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/colorGrey300"/>
</FrameLayout>