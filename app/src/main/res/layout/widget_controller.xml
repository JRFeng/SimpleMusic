<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/ivCtlImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"/>

    <jrfeng.simplemusic.widget.Divider
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="60dp"
        android:background="@color/colorGrey300"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCtlSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:maxEms="8"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/colorGrey800"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvCtlArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="8"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/colorGrey"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibCtlPlayPause"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:background="@color/colorWhite"
            android:src="@drawable/btn_ctl_play_pause"/>

        <ImageButton
            android:id="@+id/ibCtlNext"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:background="@color/colorWhite"
            android:src="@drawable/btn_ctl_next"/>

        <ImageButton
            android:id="@+id/ibCtlMenu"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:background="@color/colorWhite"
            android:src="@drawable/btn_ctl_menu"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/sbProgress"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="4dp"
        android:gravity="center_vertical"
        android:max="100"
        android:progressDrawable="@drawable/seek_bar_progress"
        android:thumb="@drawable/seek_bar_thumb"/>
</RelativeLayout>