<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="TextStyle.ListHeader">
        <item name="android:textSize">@dimen/listHeaderTextSize</item>
        <item name="android:textColor">@color/colorListTitle</item>
    </style>

    <style name="TextStyle.ListItemTitle">
        <item name="android:textSize">@dimen/ListItemTitleTextSize</item>
    </style>

    <style name="TextStyle.ListItemDescribe">
        <item name="android:textSize">@dimen/ListItemDescribeTextSize</item>
        <item name="android:textColor">@color/colorListDescribe</item>
    </style>
</resources>
