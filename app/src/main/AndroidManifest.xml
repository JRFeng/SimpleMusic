<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="jrfeng.simplemusic">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.welcome.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.navigation.NavigationActivity"
            android:launchMode="singleTask"/>

        <service android:name=".service.player.PlayerService"/>

        <receiver
            android:name=".service.player.MediaButtonControlReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="jrfeng.simplemusic.action.PLAYER_PREVIOUS"/>
                <action android:name="jrfeng.simplemusic.action.PLAYER_PLAY_PAUSE"/>
                <action android:name="jrfeng.simplemusic.action.PLAYER_NEXT"/>
                <action android:name="jrfeng.simplemusic.action.PLAYER_SHUTDOWN"/>
                <action android:name="android.media.AUDIO_BECOMING_NOISY"/>
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
            </intent-filter>
        </receiver>

        <activity android:name=".activity.scan.ScanActivity">
        </activity>
        <activity android:name=".activity.allmusic.AllMusicActivity">
        </activity>
        <activity android:name=".activity.lovemusic.LoveMusicActivity">
        </activity>
        <activity android:name=".activity.musiclist.MusicListActivity">
        </activity>
        <activity android:name=".activity.album.AlbumActivity">
        </activity>
        <activity android:name=".activity.artist.ArtistActivity">
        </activity>
    </application>

</manifest>